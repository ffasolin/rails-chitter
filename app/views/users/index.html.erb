<h1>Welcome to Chitter</h1>
<p>This is a magical Twitter clone, built with Rails</p>

<%= form_for :users, url: users_path do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :username %><br>
    <%= f.text_field :username %><br>

    <%= f.label :email %><br>
    <%= f.text_field :email %><br>

    <%= f.label :password %><br>
    <%= f.text_field :password %><br>
  </p>

  <p>
    <%= f.submit "Sign up" %>
  </p>
<% end %>
